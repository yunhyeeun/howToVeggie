<%- include ("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Edit a Comment</h1>

    <div style="width: 50%; margin: 25px auto">
        <form action="/recipes/<%= recipe_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/recipes/<%= recipe_id %>">Go Back</a>
    </div>
</div>




