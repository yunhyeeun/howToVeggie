<%- include ("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Add a Comment to <%= recipe.name %></h1>

    <div style="width: 50%; margin: 25px auto">
        <form action="/recipes/<%= recipe._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/recipes/<%= recipe._id %>">Go Back</a>
    </div>
</div>




