<%- include ("../partials/header") %>

<div class="container">
    <h1 style="text-align: center">Create a New Recipe</h1>

    <div style="width: 50%; margin: 25px auto">
        <form action="/recipes" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[name]" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[image]" placeholder="Image URL" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="recipe[body]" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/recipes">Go Back</a>
    </div>
</div>




