<%- include ("../partials/header") %>
<div class="container">
    <h1 style="text-align: center">Edit a <%= recipe.name %> Recipe</h1>

    <div class="edit-content-container">
        <form class="mb-2" action="/recipes/<%= recipe._id %>?_method=PUT"? method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[name]" value="<%= recipe.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[image]" value="<%= recipe.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="recipe[body]"><%= recipe.body %></textarea>
            </div>
            <input class="btn btn-primary btn-block" type="submit" value="Update!">
        </form>
        <a href="/recipes/<%= recipe._id %>">Go Back</a>
    </div>
</div>